{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "tu-delft/text",
	"attributes": {
		"content": {
			"type": "string",
			"default": ""
		},
		"preview": {
			"type": "boolean",
			"default": false
		},
		"showChapterSubtitle": {
			"type": "boolean",
			"default": false
		},
		"chapterSubtitle": {
			"type": "string",
			"default": ""
		}
	},
	"version": "1.0.0",
	"title": "Text Block",
	"category": "widgets",
	"icon": "editor-textcolor",
	"description": "Richtext with a full column width",
	"example": {
		"attributes": {
			"preview": true
		}
	},
	"supports": {
		"html": false
	},
	"textdomain": "tu-delft",
	"editorScript": "file:./index.js",
	"viewScript": "file:./view.js"
}
